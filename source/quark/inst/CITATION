year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "Quark: Automatic extraction of auxiliary variables from large datasets",
         author = c(person(c("Kyle", "M."), "Lang"),
                    person(c("Todd", "D."), "Little"),
                    person("Quark Development Team")),
         year = year,
         note = note,
         url = "https://github.com/quark-package/quark")
